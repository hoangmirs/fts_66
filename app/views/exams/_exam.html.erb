<div class="col-md-8 col-md-offset-1">
  <div class="title">
    <%= render "shared/exam_status_label", status: @exam.status %>
    <%= t "exams.exam_date",
      date: @exam.started_at.strftime(t "datetime_format") %>
    <%= tag(:br) %>
    <center><b><h2><%= @exam.subject.name %></h2></b></center>
    <div class="center">
      <% if @exam.subject.image_path? %>
        <%= image_tag @exam.subject.image_path.url, class: "border-image" %>
      <% else %>
        <%= t ".no_image" %>
      <% end %>
    </div>
    <%= tag(:hr) %>
    <input type="hidden" name="duration" id="duration" value="0">
  </div>
  <%= render "questions" %>
</div>
