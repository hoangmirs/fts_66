<header class="navbar navbar-fixed-top">
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse"
          data-target="#myNavbar">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <li><%= link_to (t "title"), root_path, class: "navbar-brand" %></li>
      </div>
      <div class="collapse navbar-collapse" id="myNavbar">
        <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
            <% if current_user.admin? %>
              <li><%= link_to (t "admin_home"), admin_root_path %></li>
              <li>
                <%= link_to (t "exams_button"),
                  admin_exams_path %>
              </li>
              <li>
                <%= link_to (t "subjects_button"),
                  admin_subjects_path %>
              </li>
              <li>
                <%= link_to (t "contributed_questions"),
                  admin_questions_path %>
              </li>
              <li>
                <%= link_to (t "users_button"),
                  admin_users_path %>
              </li>
            <% else %>
              <li><%= link_to (t "home"), root_path %></li>
              <li>
                <%= link_to (t "contribute_questions"),
                  user_questions_path(current_user) %>
              </li>
            <% end %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <% if current_user.avatar_path? %>
                  <%= image_tag current_user.avatar_path.url,
                    size: Settings.pictures.avatar_small_size,
                    class: "avatar-frame" %>
                <% end %>
                <%= current_user.name %><b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li>
                  <%= link_to (t "profile"), edit_user_registration_path %>
                </li>
                <li>
                  <%= link_to (t "sign_out"), destroy_user_session_path,
                    method: :delete %>
                </li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to (t "sign_up"), new_user_registration_path %></li>
            <li><%= link_to (t "sign_in"), new_user_session_path %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>
