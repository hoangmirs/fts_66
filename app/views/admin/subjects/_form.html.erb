<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header"><h1><%= yield(:modal_title) %></h1></div>
    <%= form_for [:admin, @subject], html: {multipart: true},
      authenticity_token: true, remote: true do |f| %>
      <div class="modal-body">
        <div class="form_errors">
          <%= render "shared/error_messages", object: @subject %>
        </div>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :question_number %>
          <%= f.text_field :question_number, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :duration %>
          <%= f.text_field :duration, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.file_field :image_path,
            accept: Settings.pictures.accepted_files %>
        </div>
        <div class="form-group center">
          <% if @subject.image_path? %>
            <%= image_tag @subject.image_path.url %>
          <% else %>
            <%= t ".no_image" %>
          <% end %>
        </div>
      </div>
      <div class="modal-footer">
        <span class="pull-right">
          <%= f.submit yield(:submit_button), class: "btn btn-primary" %>
        </span>
        <span class="pull-left">
          <%= link_to t(".cancel_button"), "#", class: "btn btn-warning",
            data: {dismiss: "modal"} %>
        </span>
      </div>
    <% end %>
  </div>
</div>
