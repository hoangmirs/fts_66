<% @subjects.each do |subject| %>
  <tr>
    <td><%= link_to subject.name, [:admin, subject] %></td>
    <td><%= subject.question_number %></td>
    <td><%= subject.duration %></td>
    <td>
      <%= link_to t(".edit"), edit_admin_subject_path(subject),
        class: "btn btn-primary edit_admin_subject", remote: true, id: "edit_admin_subject" %>
      <%= link_to t(".delete"), admin_subject_path(subject), method: :delete,
        remote: true, data: {confirm: t(".delete_subject_confirm")},
        class: "btn btn-danger" %>
    </td>
  </tr>
<% end %>
