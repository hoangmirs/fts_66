<%= search_form_for @search, url: admin_questions_path do |f| %>
  <div class="col-md-4">
    <%= f.text_field :content_cont, placeholder: t(".user_name"),
      class: "form-control" %>
  </div>
  <div class="col-md-4">
    <%= f.collection_select :subject_id_eq, @subjects,
      :id, :name, {include_blank: t(".all_subject")}, class: "form-control" %>
  </div>
  <div class="col-md-2">
    <%= f.submit t(".search_submit"), class: "btn btn-primary btn-block" %>
  </div>
<% end %>
