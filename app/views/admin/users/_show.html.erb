<div class="row">
  <div class="toppad col-xs-12 col-md-12 col-sm-12" >
    <div class="panel panel-info">
      <div class="panel-heading">
        <h3 class="panel-title center"><%= @user.name %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-9 col-lg-9">
            <table class="table table-user-information">
              <tbody>
                <tr>
                  <td><%= t "admin.users.email" %></td>
                  <td><%= @user.email %></td>
                </tr>
                <tr>
                  <td><%= t "admin.users.chatwork" %></td>
                  <td><%= @user.chatwork_id %></td>
                </tr>
                <tr>
                  <td><%= t "admin.users.create_at" %></td>
                  <td>
                    <%= @user.created_at.strftime(t "time_format") %>
                  </td>
                </tr>
                <tr>
                  <td><%= t "admin.users.role" %></td>
                  <td>
                    <span class="label label-danger"><%= @user.role %></span>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <div class="panel-footer">
        <%= mail_to @user.email, class: "btn btn-sm btn-primary" do %>
          <i class="glyphicon glyphicon-envelope"></i>
          <%= t ".send_mail" %>
        <% end %>
        <span class="pull-right">
          <% if devise_current_user?(@user) %>
            <%= link_to edit_admin_user_path(@user),
              class: "btn btn-sm btn-warning" do %>
              <i class="glyphicon glyphicon-edit"></i>
              <%= t "admin.users.index.btn_Edit" %>
            <% end %>
          <% end %>
        </span>
      </div>
    </div>
  </div>
</div>
