<tr>
  <td class="center"><%= get_pagination_element_index @users, user %></td>
  <td><%= link_to user.name, admin_user_path(user) %></td>
  <td><%= user.email %></td>
  <td><%= user.chatwork_id %></td>
  <td><%= user.role.capitalize %></td>
  <td><%= user.created_at.strftime(t "time_format") %></td>
  <td class="center">
    <%= link_to admin_user_path(user), remote: true,
      data: {toggle: "modal", target: "#myModal"} do %>
      <span class="glyphicon glyphicon-search"></span>
      <%= t "admin.users.btn_view" %>
    <% end %>
  </td>
  <td class="center">
    <%= link_to edit_admin_user_path(user) do %>
      <span class="glyphicon glyphicon-edit"></span>
      <%= t "admin.users.btn_edit" %>
    <% end %>
  </td>
  <% if devise_current_user? user %>
    <td></td>
  <% else %>
    <td class="center">
      <%= link_to admin_user_path(user), method: :delete, data:
        {confirm: t("admin.users.delete_user")}, class: "text-danger" do %>
        <span class="glyphicon glyphicon-remove"></span>
        <%= t "admin.users.btn_delete" %>
      <% end %>
    </td>
  <% end %>
</tr>
